{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./build/",
    "typeRoots": [
        "./node_modules/@types",
        "./@types"
    ],
    "types": ["node"],
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": true
  }
}
